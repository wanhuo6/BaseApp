<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCompat.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/public_status_bar_bg_color</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LiveActivityStyle">
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:popupAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>

    <declare-styleable name="MyAppBar">
        <attr name="navigationGravity">
            <enum name="top" value="0"/>
            <enum name="center_vertical" value="1"/>
        </attr>
        <attr name="center_title" format="reference|string"/>
        <attr name="center_title_size" format="dimension"/>
        <attr name="center_title_color" format="reference|color"/>
        <attr name="menu_left" format="reference"/>
        <attr name="menu_right" format="reference"/>
        <attr name="menu_center" format="reference"/>
        <attr name="menu4" format="reference"/>
        <attr name="menu5" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AppBar.Menu">
        <attr name="toolbarMenuTextStyle" format="reference"/>
        <attr name="toolbarMenuImageStyle" format="reference"/>
        <attr name="toolbarMenuSpinnerStyle" format="reference"/>
    </declare-styleable>

    <style name="SplitLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/public_divider_line_color</item>
    </style>

    <style name="public_vertical_divide_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/public_divider_line_color</item>
    </style>

    <style name="public_horizontal_divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/public_divider_line_color</item>
    </style>

    <style name="public_bold_horizontal_divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/public_bold_divider_line_color</item>
    </style>


    <style name="NormalDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_normal_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NormalBottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/bg_btn_blue_round</item>
        <item name="android:textColor">@color/public_text_white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:text">@string/public_str_next_step</item>
    </style>

    <style name="NormalItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/public_item_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dp_24</item>
        <item name="android:paddingRight">@dimen/dp_24</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <declare-styleable name="ItemChooseView">
        <attr name="hint" format="string"/>
    </declare-styleable>

</resources>
